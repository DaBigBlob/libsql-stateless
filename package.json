{
  "name": "libsql-stateless",
  "version": "2.8.4-alpha.1",
  "description": "thin libSQL stateless http driver for TypeScript and JavaScript",
  "homepage": "https://github.com/DaBigBlob/libsql-stateless#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DaBigBlob/libsql-stateless.git"
  },
  "bugs": {
    "url": "https://github.com/DaBigBlob/libsql-stateless/issues",
    "email": "libsqlstateless@hman.io"
  },
  "author": {
    "name": "LocalBox Crox",
    "email": "libsqlstateless@hman.io"
  },
  "license": "MIT",
  "type": "module",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "files": [
    "./dist/*",
    "./LICENSE",
    "./package.json",
    "./README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    }
  },
  "devDependencies": {
    "tsup": "^8.0.2",
    "typescript": "^5.0.0"
  },
  "tsup": {
    "entry": ["./src/main.ts"],
    "splitting": false,
    "sourcemap": false,
    "clean": true,
    "minify": true,
    "minifyWhitespace": true,
    "outDir": "./dist",
    "platform": "neutral",
    "treeshake": "safest",
    "cjsInterop": true,
    "dts": true,
    "shims": true,
    "format": ["cjs", "esm"],
    "target": ["deno1", "node18", "chrome120", "edge120", "firefox120", "safari16", "ES2020"]
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "prebuild": "rm -rf ./dist",
    "build": "tsup && rm ./dist/main.d.cts",
    "typecheck": "tsc --noEmit",
    "test": "bun run _tests/test2.ts",
    "perf": "bun run _tests/perf.ts",
    "clean": "npm run prebuild",
    "prod": "npm publish && npm run clean"
  },
  "keywords": [
    "libsql",
    "database",
    "sqlite",
    "serverless",
    "vercel",
    "netlify",
    "lambda",
    "http",
    "https",
    "webapi",
    "cloudflare-workers",
    "cloudflare-pages",
    "edge"
  ]
}
